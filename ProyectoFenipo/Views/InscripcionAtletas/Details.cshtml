@model ProyectoFenipo.Models.InscripcionAtletas
@using ProyectoFenipo.Models; 
@{
    ProyectoFenipoContainer db = new ProyectoFenipoContainer();
    ViewBag.Title = "Details";

}

<h2>Detalles de @Model.Atleta.NombreAtleta</h2>

<div>
    <h4>Atleta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PesoCorporal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PesoCorporal)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Total)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GLPoint)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GLPoint)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Atleta.NombreAtleta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Atleta.NombreAtleta)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InscripcionEquipo.DelegadoEquipo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InscripcionEquipo.DelegadoEquipo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Competencia.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Competencia.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoriaEdad.NombreCategoriaEdad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoriaEdad.NombreCategoriaEdad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoriaPeso.Genero)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoriaPeso.Genero)
        </dd>

    </dl>
</div>
<p>
    
    @Html.ActionLink("Regresar a la lista de atletas", "ListaAtletas", "Competencias" ,  new { id = Model.CompetenciaId } , new { @class = "btn btn-primary btn-sm" })
</p>

<table class="table">
    @if (db.Intentos.Where(x => x.InscripcionAtletasId == Model.Id).Count() != 0)
    {
        <tr>
            <th>
                @Html.DisplayName("Movimiento")
            </th>
            <th>
                @Html.DisplayName("Numero Intento")
            </th>
            <th>
                @Html.DisplayName("Kilos")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th>
                Editar
            </th>

        </tr>


        

        @Html.ActionLink("Actualizar", "Editar", "InscripcionAtletas", new { id = Model.Id }, new { @class = "btn btn-secondary btn-sm" })

        foreach (var intento in db.Intentos.Where(x => x.InscripcionAtletasId == Model.Id))
        {
            <tr>
                <td>
                    @Html.DisplayName(intento.Movimiento1.Nombre)
                </td>
                <td>
                    @Html.DisplayName(intento.NumeroIntento1.Numero).ToString()
                </td>
                <td>
                    @Html.DisplayName(intento.KilosMovimiento.ToString())
                </td>
                <td>
                    @Html.DisplayName(intento.StatusMovimiento.Status)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", "Intentoes", new { id = intento.Id }, new { @class = "btn btn-secondary btn-sm" })
                </td>
            </tr>
        }
    }


</table>
